/* pages/collection/collection.wxss */
@import './weui.wxss';
page{
  padding-top: 20rpx;
}
/* 空状态 */
.null{
  width:100%;
  height: 100%;
  background: #f5f5f5;
  position: fixed;
  top: 0;right: 0;bottom: 0;left: 0;
  margin: auto;
}
.centerBox{
  text-align: center;
  padding-top:40%;
}
.centerBox .nulltips{
  font-size: 24rpx;
  color: #a0a0a0;
}


.extra.extra{
  padding-top: 0;
  padding-bottom: 0;
  /* padding-right: 0; */
}
.myslideview.myslideview{
  margin-bottom: 30rpx;
}

.collect_sb {
  display: flex;
  border-radius: 10rpx;
  border: 1px solid #ddddde;
  box-shadow: 0px 1px 2px #E0E0E0;
  padding: 30rpx 0 30rpx 21rpx;
}
.collect_sb image {
  width: 270rpx;
  height: 202rpx;
  margin-right: 34rpx;
}
.sb_info view{
  margin-bottom: 27rpx;
}
.sb_info .sbname{
  font-size: 28rpx;
  color: #333;
}
.sb_info .classname{
  font-size: 26rpx;
  color: #333;
}
.sb_info .price{
  color: #F44444;
  font-size: 28rpx;
}