/* pages/froperation/froperation.wxss */
page{
  height: 100%;
  background: #f5f5f5;
}
.inner{
  background: #fff;
  padding: 0 24rpx;
}
.inner .section{
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #ededed;
  position: relative;
}
.inner .section:last-child{
  border-bottom: none;
}
.inner .section view{
  width: 184rpx;
  height: 100rpx;
  line-height: 100rpx;
  float: left;
  font-size: 30rpx;
  color: #080808;
}
.inner .section input{
  width: 460rpx;
  height: 100rpx;
  line-height: 100rpx;
  float: right;
  font-size: 30rpx;
  color: #080808;
}
.info{
  width: 702rpx;
	height: 135rpx;
	border-radius: 6rpx;
	border: solid 1px #f8e3d1;
  margin: 40rpx auto;
  background: #fbf5f0 url('https://b.86sb.com.cn/wximg/fr01.png')no-repeat;
  background-position: 42rpx 20rpx;
  background-size: 53rpx 62rpx;
  padding: 15rpx 24rpx 0 120rpx;
  box-sizing: border-box;
}
.info text{
  font-size: 19rpx;
  color: #ff8212;
}
.info view{
  font-size: 19rpx;
  color: #8e806f;
  line-height: 30rpx;
}
.nextbut{
  position: fixed;
  bottom: 20rpx;left: 0;right: 0;
  margin: auto;
    width: 702rpx;
	height: 90rpx;
	background-color: #f44444;
	border-radius: 6rpx;
  text-align: center;
  line-height: 90rpx;
  font-size: 32rpx;
  color: #ffffff;
  font-weight: 600;
  margin-top: 50rpx;
  margin-bottom: 20rpx;
}
.nextbut  button{
  position: absolute;
  top: 0;left: 0;
  width: 100%;height: 130rpx;
  opacity: 0;
}