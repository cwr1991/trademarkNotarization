/* pages/kaipiao/kaipiao.wxss */
page {
  width: 100%;
  height: 100%;
}

.null{
  width:100%;
  height: 100%;
  background: #f5f5f5;
}
.centerBox{
  text-align: center;
  padding-top:40%;
}
.centerBox .nulltips{
  font-size: 24rpx;
  color: #a0a0a0;
}
.button {
  width: 700rpx;
  left: 0;
  right: 0;
  margin: 30rpx auto;
  font-size: 34rpx;
  font-weight: 600;
}






.wraper {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.invoiceBox {
  flex: 1;
  overflow-y: scroll;
}

.invoice-item {
  padding: 36rpx 22rpx;
  border-bottom: 1px solid #ededed;
}

.invoice-item image {
  width: 31rpx;
  height: 31rpx;
  padding: 0 20rpx 20rpx;
}

.invoice-item .company {
  font-size: 30rpx;
  color: #080808;
  font-weight: 600;
  margin-right: 30rpx;
}


.invoice-item .default {
  display: inline-block;
  width: 74rpx;
  height: 32rpx;
  background: #f34544;
  border-radius: 10px;
  text-align: center;
  line-height: 32rpx;
  font-size: 24rpx;
  color: white;
}

.invoice-item .bottom {
  display: flex;
  justify-content: space-between;
  margin-top: 25rpx;
}

.invoice-item .bottom .num,.invoice-item .bottom .address {
  width: 620rpx;
  font-size: 24rpx;
  color: #666;
  line-height: 40rpx;
}
