/* pages/login/login.wxss */
.form{
  margin-top: 260rpx;
  padding: 0 50rpx;
  box-sizing: border-box;
}
.section{
  border-bottom: 2px solid #F2F2F2;
  height: 98rpx;
  line-height: 98rpx;
  font-size: 26rpx;
  padding-top: 20rpx;
  box-sizing: border-box;
}
.section.active{
  border-bottom: none;
}
.section input{
  height: 78rpx;
  line-height: 78rpx;
  font-size: 30rpx;
  padding-left: 10rpx;
  color: #080808;
  box-sizing: border-box;
}
.section .place-holder {
	color: #C1C1C1;
  font-size: 26rpx;
}
.code{
   border-bottom: 2px solid #F2F2F2;
   width: 442rpx;
   float: left;
   position: relative;
}
.code .close{
   position: absolute;
   top:0;right: 0;
   width: 36rpx;
   z-index: 88;
}
.code .close image{
  width: 100%;
}
.getcode{
  background: #D8D8D8;
  border-radius: 6rpx;
  width: 162rpx;
  height: 64rpx;
  text-align: center;
  line-height: 64rpx;
  font-size: 26rpx;
  color: #FFFFFF;
  float: right;
  margin-top: 8rpx;
}
.getcode.active{
  background: #f44444;
}
.but{
  margin-top: 160rpx;
  background: #e5a09a;
  font-size: 32rpx;
  color: rgba(255,255,255,0.4);
  border: 1rpx solid #e5a09a;
  width: 640rpx;
  height: 84rpx;
  line-height: 84rpx;
  border-radius: 6rpx;
  text-align: center;
  position: relative;
}
.but.active{
  background: #F44444;
  color: #fff;
}
.but button{
  position: absolute;
  top:0;left: 0;
  width: 100%;
  height: 84rpx;
  opacity: 0;
}
.info{
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 20rpx;
  color: #9B9B9B;
  margin-top: 20rpx;
  position: relative;
}
.info::after{
  content: "";
  width: 400rpx;
  height: 1rpx;
  background: #DCDCDC;
  position: absolute;
  top:0;left: 0;right: 0;bottom: 0;
  margin: auto;
}
.info text{
  position: absolute;
  top:0;left: 0;right: 0;bottom: 0;
  margin: auto;
  z-index: 8;
  padding: 0 10rpx;
  background: #fff;
  width: 170rpx;
}
.weixinbut{
  width: 100%;
  position: fixed;
  bottom: 116rpx;
  text-align: center;
  font-size: 24rpx;
  color: #9B9B9B;
}
.weixinbut image{
  width: 60rpx;
  display: block;
  margin: 0 auto;
  margin-bottom: 20rpx;
}
.weixinbut button{
  position: absolute;
  top: 0;left: 0;
  width: 100%;height: 130rpx;
  opacity: 0;
}