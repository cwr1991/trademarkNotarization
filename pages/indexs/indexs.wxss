/* pages/indexs/indexs.wxss */
.banner{
  height: 364rpx;
}
.banner image{
  width: 100%;
}

.title{
  padding-top: 30rpx;
  box-sizing: border-box;
  text-align: center;
  position: relative;
}
.title text{
  font-size: 20rpx;
  color: #D5D5D5;
}
.title .h6{
  font-size: 30rpx;
  color: #000000;
  font-weight: 600;
}
.title .h6 image{
  width: 28rpx;
  display: inline-block; 
  vertical-align: middle;
} 
.title .more{
  position: absolute;
  right: 0;top: 0;bottom: 0;
  margin: auto;
  width: 120rpx;
  height: 40rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  color: #666666;
}
.title .more image{
  width: 15rpx;
   display: inline-block; 
  vertical-align: middle;
  margin-left: 5rpx;
}

.classbox{
  overflow-x: scroll;
}
.classList{
  width: 225%;
  padding-bottom: 20rpx;
  padding-top: 30rpx;
}
.classList::after{
  content: "";
  display: block;
  clear: both;
}
.classList .classitem{
  width: 144rpx;
  height: 182rpx;
  box-shadow: 0 2rpx 11rpx 0 rgba(198,198,198,0.50);
  border-radius: 10rpx;
  text-align: center;
  padding-top: 35rpx;
  box-sizing: border-box;
  margin-left: 23rpx;
  display: inline-block;
}
.classList .classitem image{
  width: 43rpx;
}
.classList .classitem view{
  font-size: 26rpx;
  color: #181818;
}
.classList .classitem text{
  font-size: 26rpx;
  color: #666666;
}

.seemore{
  background: #F44444;
  border-radius: 30rpx;
  width: 316rpx;
  height: 60rpx;
  margin:30rpx auto;
  text-align: center;
  font-size: 24rpx;
  color: #FFFFFF;
  padding-top: 15rpx;
  box-sizing: border-box;
  margin-bottom: 50rpx;
}
.seemore image{
  width: 14rpx;
  margin-left: 5rpx;
}
.intelligent{
  background: #F2F2F4;
}

.intelligentForm{
  padding: 30rpx;
  box-sizing: border-box;
}
.intelligentForm .form{
  margin-top: 8rpx;
}
.intelligentForm .form::after{
  content: "";
  clear: both;
  display: block;
}
.intelligentForm .form input{
  width: 518rpx;
  height: 83rpx;
  background: #fff;
  font-size: 26rpx;
  padding-left: 21rpx;
  box-sizing: border-box;
  color: #333;
  float: left;
}

.intelligentForm .form input.place-holder {
  color: #959595;
}

.intelligentForm .form .but{
  background: #F44444;
  border-radius: 10rpx;
  width: 154rpx;
  height: 83rpx;
  text-align: center;
  line-height: 83rpx;
  font-size: 30rpx;
  color: #FFFFFF;
  float: right;
}

.intelligent .intelligentText{
  font-size: 26rpx;
  color: #181818;
  margin-top: 15rpx;
  padding-left: 31rpx;
  padding-bottom: 52rpx;
  box-sizing: border-box;
}
.intelligent .intelligentText text{
  color: #3737d0;
}

.savephone{
  padding: 40rpx 28rpx 30rpx 28rpx;
  box-sizing: border-box;
  background:#fff url('https://b.86sb.com.cn/wximg/indexs02.png')no-repeat;
  background-size: 100% 487rpx;
}
.savephone .save{
  padding: 0 37rpx;
  box-sizing: border-box;
}
.savephone .save .savetitle{
  text-align: center;
}

.savephone .save .savetitle .h6{
  font-size: 30rpx;
  color: #FFFFFF;
  margin-top: 30rpx;
}
.savephone .save .savetitle view{
  font-size: 26rpx;
  color: #FFFFFF;
  margin-top: 8rpx;
}
.savephone .save .savetitle view text{
  color: #f9fb00;
}
.savephone .save input{
  width: 100%;
  height: 80rpx;
  border: 1px solid #979797;
  border-radius: 8rpx;
  margin-top: 86rpx;
  color: #333;
  font-size: 26rpx;
  padding-left: 32rpx;
  box-sizing: border-box;
}
.savephone .save input.place-holder{
  color: #999;
}

.savephone .save .savebut{
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  color: #FFFFFF;
  background: #F44444;
  border-radius: 8rpx;
  margin-top: 20rpx;
  margin-bottom: 80rpx;
}

.datalist{
  background: #F2F2F4;
  padding: 0 39rpx 40rpx 11rpx;
  box-sizing: border-box;
}
.datalist::after{
  content: "";
  display: block;
  clear: both;
}
.datalist .item{
  background: #FFFFFF;
  border-radius: 8rpx;
  width: 322rpx;
  height: 374rpx;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  margin-top: 39rpx;
  float: left;
  margin-left: 28rpx;
}
.datalist .item image{
  width: 270rpx;
}
.datalist .item .name{
  font-size: 28rpx;
  color: #333333;
  font-weight: 600;
}
.datalist .item text{
  font-size: 24rpx;
  line-height: 60rpx;
  color: #999999;
}

.datalist .item  .price{
  font-size: 28rpx;
  color: #F44444;
}

.bottomnull{
  text-align: center;
  background:#F2F2F4;
  line-height: 80rpx;
  font-size: 20rpx;
  color: #666;
}