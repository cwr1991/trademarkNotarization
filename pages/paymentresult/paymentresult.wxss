/* pages/paymentresult/paymentresult.wxss */
.inner{
  padding-top: 120rpx;
  text-align: center;
  font-size: 38rpx;
  color: #080808;
}
.inner image{
  width: 216rpx;
  display: block;
  margin: 0 auto;
  margin-bottom: 38rpx;
}
.inner text{
  /* font-weight: 600; */
}

.buts{
  width: 560rpx;
	height: 90rpx;
	background-color: #f44444;
	border-radius: 6rpx;
  margin: 90rpx auto; 
  text-align: center;
  line-height: 90rpx;
  color: #ffffff;
  font-size: 30rpx;
  position: relative;
}
.buts button{
  position: absolute;
  top:0;left: 0;
  width: 100%;
  height: 100rpx;
  opacity: 0;
}

.butBottom{
  position: fixed;
  left: 0;right: 0;bottom: 30rpx;
  margin: auto;
  width: 100%;
  height: 90rpx;
  padding: 0 54rpx;
  box-sizing: border-box;
}
.share{
  width: 300rpx;
  text-align: center;
  color: #f44444;
  font-size: 30rpx;
  height: 90rpx;
  line-height: 90rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
  position: relative;
  border: solid 1px #f44444;
  border-radius: 6rpx;
  float: left;
}
.share button{
  position: absolute;
  top:0;left: 0;
  width: 100%;
  height: 100rpx;
  opacity: 0;
}

.backindex{
  width: 300rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: #f5f5f5;
	border-radius: 6rpx;
  color: #080808;
  font-size: 30rpx;
  float: right;
}