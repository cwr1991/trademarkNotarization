/* pages/extrafiles/extrafiles.wxss */
.top-tip{
  margin: 0 32rpx 32rpx;
  padding: 18rpx 27rpx;
  color: #ff8e50;
  background: #fff6f1;
  font-size: 22rpx;
  border-radius: 8rpx;
}

.fileBox{
  padding: 0 32rpx 40rpx;
}
.fileBox .title{
  margin-bottom: 30rpx;
}
.fileBox .flexbox{
  display: flex;
  justify-content: space-between;
}
.itemfile{
  width: 325rpx;
  height: 220rpx;
  background: #e0edfe;
  text-align: center;
  border-radius: 6px;
}
.itemfile.nobg{
  background: 0;
  border:  1px solid #ededed;
}
.itemfile .addimg{
  width:60rpx;
  height:60rpx;
  margin: 30rpx auto;
}
.itemfile .tip-text{
  font-size: 24rpx;
  color: #fff;
}

.hide{
  display: none;
}
.showimg{
  width: 100%;
  height: 100%;
  display: inline;
}

.button {
  width: 700rpx;
  left: 0;
  right: 0;
  margin: 30rpx auto;
  font-size: 34rpx;
  font-weight: 600;
}