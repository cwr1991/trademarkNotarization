page{
    height: 100%;
}
.applicant{
    height: 100%;
    padding-top: 105rpx;
    box-sizing: border-box;
    position: relative;
}
.search{
    position: fixed;
    width: 100%;
    padding: 0 24rpx;
    box-sizing: border-box;
    top: 0;
    z-index: 3;
    display: flex;
    height: 74rpx;
    background: #fff;
}
.search_input{
    flex:1;
    padding-left: 224rpx;
    background-color: #f5f5f5;
    border-radius: 6rpx;
}
.search_ico{
    position: absolute;
    width:30rpx;
    height:30rpx;
    left: 164rpx;
    top: 22rpx;
}
.search_input input{
    color: #181818;
    font-size: 28rpx;
    height: 100%;
}
.input-placeholder{
    color: #c6c6c6;
}
.search .manager{
    font-size: 30rpx;
    color: #080808;
    align-self: center;
    padding-left: 52rpx;
}
.content{
    padding: 0 24rpx;
    padding-bottom: 120rpx;
    box-sizing: border-box;
}
.list{
    min-height: 100rpx;
    display: flex;
    align-items: center;
    border-bottom:1px solid #ededed;
}
.list .name{
    flex: 1;
    color: #080808;
    font-size: 30rpx;
    display: flex;
    align-items: center;
}
.list .edit{
    color: #c6c6c6;
    font-size: 24rpx;
}
.applicant_add{
    position: fixed;
    width: 702rpx;
    margin: 0 24rpx;
    bottom: 0rpx;
    border-bottom: 20rpx solid #fff;
    height: 90rpx;
    line-height: 90rpx;
    background-color: #f44444;
    /* padding-bottom: 20rpx; */
    border-radius: 6rpx;
    color:#fff;
    font-weight: 600;
    text-align: center;
}
.add_ico{
    font-size: 40rpx;
}
.add_f{
    font-size: 40rpx;
}
.phone{
    margin-left: 15rpx;
}
/* 空状态 */
.empty{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 195rpx;
}
.empty_img{
    width: 230rpx;
    height: 283rpx;
}
.empty_img image{
    width:100%;
    height: 100%;
}
.empty_text{
    color: #a0a0a0;
    font-size: 26r  px;
}
/* 全选底部 */
.selectbox{
    position: fixed;
    width: 702rpx;
    margin: 0 24rpx;
    bottom: 20rpx;
    height: 90rpx;
    line-height: 90rpx;
    background: #fff;
}
.selectbox .check{
    float: left;
}
.selectFont{
    margin-left: 30rpx;
}
.delete{
    width: 270rpx;
	height: 90rpx;
	background-color: #f44444;
    border-radius: 6rpx;
    float: right;
    color:#fff;
    font-size: 30rpx;
    text-align: center;
}
